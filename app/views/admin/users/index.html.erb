<table>
  <tr>
    <th>ユーザ一覧</th>
    <th><%= link_to 'ユーザを作成する', new_user_path %></th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td class="px-2">
      <%= user.name %>
      <%= user.email %>
    </td>
    <td class="px-4">
    投稿数:<%= user.tasks.size %>
      <%= link_to '編集', edit_user_path(user.id) %>
      <%= link_to '詳細', user_path(user.id) %>
      <%= link_to '削除', user_path(user.id), method: :delete, id:"delete_#{user.id}" %>
    </td>
    <td class="px-4">
      admin: <%= user.admin %>
      <% if user.admin %>
        <%= link_to '権限を削除する', admin_user_path(user.id), method: :delete %>
      <% else %>
        <%= link_to '権限を付与する', edit_admin_user_path(user.id) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
