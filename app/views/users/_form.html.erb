<%= form_with(model: @user, local: true) do |user| %>
  <div>
    <%= user.label :name %>
    <%= user.text_field :name %>
  </div>
  <div>
    <%= user.label :email %>
    <%= user.text_field :email %>
  </div>
  <div>
    <%= user.label :password %>
    <%= user.text_field :password %>
  </div>
  <div>
    <%= user.label :password_confirmation %>
    <%= user.password_field :password_confirmation %>
  </div>
  <%= user.submit %>
<% end %>
