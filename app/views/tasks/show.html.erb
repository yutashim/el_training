<div class="shown_task">
  <p><%= @task.title %></p>
  <p><%= @task.detail %></p>
  <p>作成日時:<%= @task.created_at %></p>
  <p>終了期限:<%= @task.deadline %></p>

</div>
<div>
  <%= link_to '詳細', task_path(@task.id) %>
  <%= link_to '編集', edit_task_path(@task.id) %>
  <%= link_to '削除', task_path(@task.id), method: :delete %>
</div>
<%= "_"*40 %>
